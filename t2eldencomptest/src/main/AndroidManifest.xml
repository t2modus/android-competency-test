<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.elden.t2eldencomptest">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".T2Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:configChanges="orientation|screenSize"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.friend_list.FriendListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.friend_details.FriendDetailsActivity"
            android:label="@string/title_activity_friend_details"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>